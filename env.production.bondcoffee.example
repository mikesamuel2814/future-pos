# Bond Coffee POS System - Production Environment Variables
# Copy this file to /var/www/bondcoffeepos/.env.production on the server

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://bondcoffeepos_user:BondCoffeePOS2024!Secure@localhost:5432/bondcoffeepos_db

# Server Configuration
PORT=8000

# Session Configuration
# Generate a secure random string: openssl rand -base64 32
SESSION_SECRET=your-secure-session-secret-key-change-this-in-production

# Environment
NODE_ENV=production

